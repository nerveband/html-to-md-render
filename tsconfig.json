{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "lib": ["dom", "es6", "dom.iterable", "esnext"],
    "types": ["chrome", "jest", "node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
} 